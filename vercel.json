{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "vite",
  "outputDirectory": "dist",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
  ,
  "routes": [{"handle":"filesystem", "src": "/(.*)", "dest": "/index.html"}]
}
